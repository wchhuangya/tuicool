<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.izzyleung.zhihudailypurify"
    android:versionCode="17"
    android:versionName="1.17" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="io.github.izzyleung.zhihudailypurify.ZhihuDailyPurifyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.ZhihuDailyPurify.Light.NoActionBar" >
        <activity
            android:name="io.github.izzyleung.zhihudailypurify.ui.activity.MainActivity"
            android:alwaysRetainTaskState="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.izzyleung.zhihudailypurify.ui.activity.SearchActivity"
            android:alwaysRetainTaskState="true" />
        <activity
            android:name="io.github.izzyleung.zhihudailypurify.ui.activity.PickDateActivity"
            android:alwaysRetainTaskState="true"
            android:label="@string/action_pick_date" />
        <activity
            android:name="io.github.izzyleung.zhihudailypurify.ui.activity.SingleDayNewsActivity"
            android:alwaysRetainTaskState="true" />
        <activity
            android:name="io.github.izzyleung.zhihudailypurify.ui.activity.PrefsActivity"
            android:label="@string/action_settings"
            android:theme="@style/Theme.ZhihuDailyPurify.Prefs" />
    </application>

</manifest>